{
  "name": "@mwm/functional",
  "version": "5.3.0",
  "author": "Matt McMahon <contact@matt-mcmahon.com> (http://matt-mcmahon.com/)",
  "description": "Extremely minimal functional library with a focus on source-code clarity.",
  "devDependencies": {
    "@mwm/sign": "^1.3.2",
    "@types/node": "^14.0.14",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "tap": "^14.10.7",
    "tap-nirvana": "^1.1.0",
    "typescript": "^4.0.0-beta"
  },
  "husky": {
    "hooks": {
      "DISABLED pre-commit": "npm run silent"
    }
  },
  "keywords": [
    "functional",
    "experimental",
    "tutorial",
    "learning"
  ],
  "license": "MIT",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/matt-mcmahon/functional.git"
  },
  "scripts": {
    "build": "run-s build:development",
    "build:clean": "rm -rf ./build ./dist ./.nyc_output",
    "build:development": "tsc",
    "build:production": "tsc -p tsconfig.production.json",
    "build:watch": "tsc --watch",
    "lint": "prettier --check source/**/*",
    "lint:fix": "prettier --write source/**/*",
    "prepublishOnly": "run-s test:silent build:production",
    "preversion": "run-s test:silent",
    "test": "run-s lint build test:build",
    "test:build": "tap -R spec ./build/**/*.test.js",
    "test:silent": "tap --no-coverage --no-coverage-report --bail -R silent ./source/**/*.test.ts",
    "test:source:watch": "tap -R spec --watch ./source/**/*.test.ts",
    "test:source": "tap -R spec ./source/**/*.test.ts"
  }
}